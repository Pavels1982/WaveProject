<Window x:Class="VoiceСhanging.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:VoiceСhanging"
        xmlns:controls="clr-namespace:VoiceСhanging.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="680" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel Orientation="Vertical">
                <controls:ChartView DataContext="{Binding Model1}"/>
                <controls:ChartView DataContext="{Binding Model2}"/>
                <controls:ChartAnalizerView DataContext="{Binding Model3}"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
